@model IEnumerable<GestionInscriptions.Models.Inscription>

@{
    ViewData["Title"] = "Liste des Inscriptions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-ul"></i> Liste des Inscriptions</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle Inscription
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Étudiant</th>
                            <th>Matricule</th>
                            <th>Année Scolaire</th>
                            <th>Classe</th>
                            <th>Montant</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                <td>@item.Etudiant.Prenom @item.Etudiant.Nom</td>
                                <td>@item.Etudiant.Matricule</td>
                                <td>@item.AnneeScolaire.Libelle</td>
                                <td>@item.Classe.Libelle</td>
                                <td>@item.Montant.ToString("N0") FCFA</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Détails
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Aucune inscription enregistrée pour le moment.
                </div>
            }
        </div>
    </div>
</div>